<section class="section">
    <div class="slider-main js-slider-main">
        {% for slide in home_slider_migx %}
            <div class="slider-main__slide">
                <div class="container container-fluid d-flex align-items-center">
                    <div class="row align-items-center">
                        <div class="col-12 col-sm-6 col-md-6 col-xl-5 offset-xl-1">
                            <div class="slider-main__text-1">{{ slide.text1 }}</div>
                            <div class="slider-main__text-2">{{ slide.text2 }}</div>
                            <a href="{{ slide.href }}" class="btn btn_black">{{ slide.text_button }}</a>
                            <div class="slider-main__text-3">{{ slide.text3 }}</div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-6">
                            <img src="image/{{ slide.image }}" alt="">
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>